#include /etc/sway/config

# Variables
set $mod Mod4
set $scale 1.25
set $wallpaper $HOME/.local/share/wallpapers/current
set $lockscreen_wallpeper $HOME/.local/share/wallpapers/lockscreen-current
set $lock_cmd swaylock --daemonize --image /home/jyotir/.local/share/wallpapers/lockscreen-current
set $sleep_cmd systemctl suspend
set $launcher_cmd wofi --show drun --no-actions --insensitive --matching=fuzzy --allow-images --prompt 'Run' | xargs swaymsg "exec -- "
set $scripts_dir $HOME/.config/sway/scripts

### Output Configuration ###

# Set Scaling
output eDP-1 scale 1.25

# Set Wallpaper
output * bg $wallpaper fill

# Add Gaps
gaps inner 10
#smart_gaps on

# Lock the screen after 300 seconds of inactivity, then turn off
# all displays after another 300 seconds, and turn the screens back on when
# resumed. It will also lock the screen before the computer goes to sleep.
